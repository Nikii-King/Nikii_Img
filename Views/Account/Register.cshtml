<script>
// ÂõæÂΩ¢È™åËØÅÁ†ÅÁîüÊàê‰∏éÂà∑Êñ∞
function refreshCaptcha() {
    fetch('/Account/GetCaptcha')
        .then(res => res.json())
        .then(data => {
            $('#imgCodeBox').text(data.code);
        });
}
$(function(){
    refreshCaptcha();
    $('#imgCodeBox').on('click', refreshCaptcha);
});

// Ê†áËÆ∞ÊòØÂê¶Â∑≤ÂèëÈÄÅÈÇÆÁÆ±È™åËØÅÁ†Å
let codeSent = false;

// Ëé∑ÂèñÈÇÆÁÆ±È™åËØÅÁ†ÅÊåâÈíÆ
$('#sendCodeBtn').off('click').on('click', function () {
    var email = $('#emailInput').val();
    var imgCodeInput = $('#imgCodeInput').val();
    if (!email) {
        alert('ËØ∑ÂÖàËæìÂÖ•ÈÇÆÁÆ±ÔºÅ');
        return;
    }
    if (!imgCodeInput) {
        alert('ËØ∑ÂÖàÂ°´ÂÜôÂõæÂΩ¢È™åËØÅÁ†ÅÔºÅ');
        return;
    }
    var btn = this;
    btn.disabled = true;
    btn.innerText = 'ÂèëÈÄÅ‰∏≠...';
    fetch('/Account/SendRegisterCode', {
        method: 'POST',
        headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
        body: 'email=' + encodeURIComponent(email) + '&captcha=' + encodeURIComponent(imgCodeInput)
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            alert('È™åËØÅÁ†ÅÂ∑≤ÂèëÈÄÅÔºåËØ∑Êü•Êî∂ÈÇÆÁÆ±');
            var sec = 60;
            btn.innerText = sec + 'ÁßíÂêéÈáçËØï';
            var timer = setInterval(function() {
                sec--;
                btn.innerText = sec + 'ÁßíÂêéÈáçËØï';
                if (sec <= 0) {
                    clearInterval(timer);
                    btn.disabled = false;
                    btn.innerText = 'Ëé∑ÂèñÈ™åËØÅÁ†Å';
                }
            }, 1000);
        } else {
            alert(data.msg || data.message || 'È™åËØÅÁ†ÅÂèëÈÄÅÂ§±Ë¥•');
            refreshCaptcha && refreshCaptcha();
            btn.disabled = false;
            btn.innerText = 'Ëé∑ÂèñÈ™åËØÅÁ†Å';
        }
    })
    .catch(() => {
        alert('È™åËØÅÁ†ÅÂèëÈÄÅÂ§±Ë¥•');
        btn.disabled = false;
        btn.innerText = 'Ëé∑ÂèñÈ™åËØÅÁ†Å';
    });
});

// Ê≥®ÂÜåÊåâÈíÆAJAXÊèê‰∫§
$('#registerBtn').off('click').on('click', function (e) {
    e.preventDefault();
    var data = {
        username: $('#usernameInput').val(),
        password: $('#passwordInput').val(),
        email: $('#emailInput').val(),
        code: $('#codeInput').val(),
        captcha: $('#imgCodeInput').val()
    };
    if (!data.captcha) {
        alert('ËØ∑Â°´ÂÜôÂõæÂΩ¢È™åËØÅÁ†Å');
        return;
    }
    $.ajax({
        url: '/Account/Register',
        type: 'POST',
        data: data,
        success: function (res) {
            if (res.success) {
                alert('Ê≥®ÂÜåÊàêÂäüÔºåÁ≠âÂæÖÁÆ°ÁêÜÂëòÂÆ°Ê†∏ÔºÅ');
                window.location.href = '/Account/Login';
            } else {
                alert(res.msg || 'Ê≥®ÂÜåÂ§±Ë¥•');
            }
        },
        error: function () {
            alert('Ê≥®ÂÜåËØ∑Ê±ÇÂ§±Ë¥•');
        }
    });
});
</script>

