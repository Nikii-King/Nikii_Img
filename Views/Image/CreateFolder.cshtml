@{
    var isAdmin = User.IsInRole("Admin") || (ViewBag.User != null && ViewBag.User.IsAdmin);
}
<style>
    body {
        background: linear-gradient(120deg, #e0e7ef 0%, #f7faff 100%);
    }
    .folder-create-card {
        max-width: 420px;
        margin: 60px auto 0 auto;
        background: #fff;
        border-radius: 24px;
        box-shadow: 0 8px 40px 0 rgba(31,38,135,0.10), 0 1.5px 8px 0 rgba(31,38,135,0.06);
        padding: 36px 32px 32px 32px;
    }
    .folder-create-title {
        font-size: 1.6rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
        letter-spacing: 1px;
        color: #232526;
        text-align: center;
    }
    .form-label {
        font-weight: 600;
    }
    .form-control {
        border-radius: 8px;
        font-size: 1rem;
        margin-bottom: 18px;
    }
    .btn-save {
        background: linear-gradient(90deg, #4f8cff 0%, #38e8ff 100%);
        color: #fff;
        border: none;
        border-radius: 12px;
        font-weight: 600;
        font-size: 1.1rem;
        padding: 0.7rem 2.2rem;
        box-shadow: 0 2px 12px rgba(79,140,255,0.10);
        transition: background 0.2s, box-shadow 0.2s, transform 0.15s;
        width: 100%;
    }
    .btn-save:hover {
        background: linear-gradient(90deg, #38e8ff 0%, #4f8cff 100%);
        box-shadow: 0 4px 24px rgba(79,140,255,0.18);
        transform: translateY(-2px) scale(1.04);
    }
</style>
<div class="folder-create-card">
    <div class="folder-create-title">新建文件夹</div>
    <form method="post" action="@Url.Action("CreateFolder", "Image")">
        <div class="mb-3">
            <label for="folderName" class="form-label">文件夹名称</label>
            <input type="text" class="form-control" id="folderName" name="folderName" required />
        </div>
        @if (isAdmin)
        {
            <div class="mb-3">
                <label class="form-label">类型</label>
                <select class="form-control" id="isShared" name="isShared">
                    <option value="false">私有</option>
                    <option value="true">共享</option>
                </select>
            </div>
        }
        <button type="submit" class="btn btn-save">创建文件夹</button>
        <a href="@Url.Action("FolderList", "Image")" class="btn btn-link mt-3" style="display:block;text-align:center;">返回列表</a>
    </form>
</div> 